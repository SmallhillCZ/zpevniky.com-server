{
  "apps" : [
    {
      "name"        : "zpevniky-server",
      "script"      : "./index.js",
      
      "watch": true,
      "ignore_watch" : ["node_modules"],
      
      "log_date_format": "YYYY-MM-DD HH:mm:ss",

      "min_uptime": "5s",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    }
  ]
}